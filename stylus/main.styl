@import '../node_modules/stylus-normalize/normalize'
@import 'mixins'
@import 'vars'
@import 'fonts'
@import 'calendar.css'


/**********************************
* COMMON 
**********************************/
*
  color $black
  font-family 'Cabin'

html, body
  height 100%
  background #eee
  
.container
  position relative
  width 940px
  margin auto

/**********************************
* GLOBAL ADD BUTTON
**********************************/

.add-button-wrap
  position fixed
  bottom 50px
  right 100px

.add-button-global
  height 70px
  width 70px
  border-radius 50%
  outline none
  border none
  cursor pointer
  background $red
  transition all .3s
  border 1px solid darken($red, 10%)
  &:hover
    background darken($red, 20%)
    transform translateY(-7%)
    box-shadow 0 3px 5px 1px rgba(0, 0, 0, .5)
  .fa
   color #fff
  
/**********************************
* APP SIDEBAR
**********************************/
.app-sidebar
  height 100%
  position fixed
  width 70px
  background $red

.main-nav
  reset()
  flexbox(true, true)
  flex-direction column

.main-nav li
  flexbox(true, true)
  list-style none
  width 100%
  height 70px
  transition all .2s
  cursor pointer
  &:hover
    background darken($red, 20%)
  .fa
    color #fff 
    font-size 1.7em
.sidebar-item-active
  background darken($red, 20%)
    
.sidebar-logo-wrap
  flexbox(true, true)
  height 70px
  width 100%
.sidebar-logo
  height 50px
  width @height
  background url(../img/logo.png) no-repeat
  background-size 50px

/**********************************
* APP BODY
**********************************/
.app-body
  flexbox(false, false)

.side-panel
  flexbox(true, false)
  background darken($red, 20%)
  height 100%
  position fixed
  width 0
  top 0
  left 70px
  transition  all .2s
  overflow hidden

