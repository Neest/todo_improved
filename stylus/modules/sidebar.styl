.app-sidebar
  height 100%
  width 70px
  background $red
  position relative
  z-index 2
  perspective 100px

.main-nav
  reset()
  flexbox(false, true)
  flex-direction column
  justify-content space-around

.main-nav li
  flexbox(false, true)
  list-style none
  width 100%
  height 70px
  transition all .1s
  cursor pointer
  border-right 0px solid #fff
  position relative
  &:hover
    background darken($red, 20%)
  &.sidebar-item-active
    background darken($red, 20%)
    border-right-width 3px
  i
    flex 2
    flexbox(true, true)
    color #fff 
    font-size 1.3em

.main-nav-hint
  flexbox(true, true)
  position absolute
  top 0; right 0
  transform translate(-75%, 75%)
  border-radius 50%
  background #3d3d3d
  color #fff
  height 20px
  width 20px
  font 500 13px 'Hind'

.side-panel
  flexbox(true, false)
  background #fff
  height 100%
  position absolute
  top 0
  left 70px
  box-shadow: 11px 0px 16px -12px #000;
  transform-origin center left

.transparent
  background transparent !important
  overflow visible !important
