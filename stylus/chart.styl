.chartzones
  flexbox(false, true)
  width 450px
  height 100%
  padding 10px 20px 

.chartzone-wrap
  height 33.3%
  width 100%
  background #fff
  padding-bottom 20px

.chartzone-top
  flexbox(false, true)
  justify-content space-between
  padding 5px 0
  width 100%
  .chartzone-settings
    font-size 1.2em
    color: #ccc

.chartzone
  flexbox(true, true)

.chartzone-half
  flexbox(true, true)
  height 100%
  width 50%
  box-sizing border-box
  position relative
  padding-top 40px
  border-top 2px solid #eee
  &:first-of-type
    border-right 2px solid #eee
  .chartzone-title
    width 100%
    padding 0 5px
    position absolute
    top 5px
    i
     font-size 1em

.chartzone-double
  height 100%
  width 100%
  margin 0

.chartzone-title
  font 500 0.8em 'Hind'
  color #4d4d4d
  i
    color $red
    font-size 20px

.chartzone-settings
  position relative
  i
    font-size 17px
    color #aaa
    cursor pointer
    &:hover .chartzone-settings-hint
      transform translateX(-120%)
      opacity .75
      
  &:hover
    &:after, i
      color #4d4d4d
  &:after
    content '\f0d7'
    color #aaa
    font normal 12px 'fontawesome'
    position absolute
    right 150%
    top 0; bottom 0
    margin auto
    transform translateY(20%)
    transition none
    pointer-events none
  &.period-open
    i
      color #4d4d4d
    .chartzone-settings-list
      opacity 1
      transform translate(20%, 5%)
    &:after
      color #4d4d4d
      content '\f0d8' !important
  &.period-close
    .chartzone-settings-list
      pointer-events none

.chartzone-settings-hint
  position absolute
  left 0; top 0; bottom 0
  transition all .1s linear
  opacity 0
  background #000
  padding 3px 5px
  border-radius 3px
  transform translateX(-125%)
  font 700 12px 'Hind'
  color #fff
  white-space nowrap
  pointer-events none

.chartzone-settings-list
  white-space nowrap
  top 120%
  right 0
  background #fff
  position absolute
  z-index 5
  transition all .1s
  opacity 0
  box-sizing content-box
  transform translate(20%, 0)
  padding 10px
  list-style none
  font normal 0.9em 'Cabin'
  line-height 20px
  box-shadow 0 0 3px 0 rgba(0, 0, 0, .5);
  border-radius 2px
  li
    list-style none
    color #5d5d5d
    font 500 12px 'Hind'
    cursor pointer
    &:hover
      color #3d3d3d

.chartzone-period-active
  color $red !important
  text-decoration underline

.chart-info-popup
  position absolute
  max-width 300px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  background #000
  border-radius 3px
  box-shadow 0 0 10px 1px rgba(0, 0, 0, .3);
  color #fff
  font 700 12px 'Hind'
  padding 5px 10px
  opacity 0
  transition all .1s
  pointer-events none
  li
    list-style none

.chart-info-popup-visible
  transition all .1s, opacity .2s .2s
  opacity .75 !important


