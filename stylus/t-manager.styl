.tasklist-global 
  max-width 400px
  max-height 450px
  position absolute
  left 0
  right 0
  top 7%
  margin auto
  overflow-y scroll
  padding 0 5px
  box-sizing content-box
  perspective 800px
  &::-webkit-scrollbar
    transition: all .2s
    width 5px
  &::-webkit-scrollbar-track
    background #eee
  &::-webkit-scrollbar-thumb
    background #e7e7e7
    border-radius 50px
    &:hover
      background #ccc

.tl-task 
  width 100%
  background #fff
  margin 10px 0
  position relative
  cursor pointer
  transition all 50ms
  flexbox(true , false)
  flex-direction column
  align-items center
  padding 5px 0
  position relative
  user-select none
  &.tl-task-updating
    border 1px dashed $gray
    &:after
      display none

.tl-task-content
  position relative
  flexbox(false, true)
  width 100%
  height 100%

.tl-task-active
  background $red
  box-shadow 1px 1px 5px 1px rgba(0, 0, 0, .2)
  .tl-task-text
    color #fff !important
  &:hover
    background $red !important

.tl-task-removed
  transition all .5s cubic-bezier(.36,-0.64,.34,1.76)
  padding 0 
  margin 0 
  opacity 0

.tl-task:hover
  box-shadow 1px 1px 5px 1px rgba(0, 0, 0, .2)

.tl-task-low:after,
.tl-task-high:after,
.tl-task-normal:after 
  content ''
  display block
  position absolute
  height 100%
  width 1%
  left 0
  top 0

.tl-task-low:after
  background #DAE163
  
.tl-task-normal:after
  background #639DE1

.tl-task-high:after
  background #FF4A25

.tl-task-text 
  font normal 1em 'Hind'
  color #3d3d3d
  height 100%
  display flex
  align-items flex-end
  padding 5px 20px
  max-width 80%
  pointer-events none

.tl-task-folder 
  width 15%
  height 100%
  position absolute
  right 0
  top 0
  display flex
  justify-content center
  align-items center
  pointer-events none

.tl-task-folder .fa 
  font-size 1.5em
  color #acacac

.toolbar 
  height 30%
  position absolute
  right 3%
  top 0
  bottom 0
  margin auto
  display flex
  flex-direction column
  justify-content space-between
  cursor pointer
  overflow hidden
  padding 20px 10px 20px 50px
  box-sizing content-box

.tb-tool 
  height 50px
  width 50px
  background #EB6361 
  border-radius 50%
  display flex
  justify-content center
  align-items center
  transform translateX(0)
  position relative
  left 0
  &:nth-of-type(2)
    transition-delay 25ms
  &:last-of-type
    transition-delay 50ms

.tb-tool-hidden 
  display none 

.tb-tool:hover 
  background #DD3331
  box-shadow 2px 2px 10px 1px rgba(0, 0, 0, .4)

.tb-tool-disappear
  animation-name disappear
  animation-duration .3s
  animation-timing-function ease-in-out
  animation-fill-mode forwards

.tb-tool .fa 
  color #fff
  font-size 1.2em

/*********************************************
* TASK EDITOR
*********************************************/

.tl-task-editor
  flexbox(false, true)
  width 100%
  background #fff
  position relative

.tl-te-cancel
  color $red
  opacity .5
  position absolute
  top 0
  right 5px
  font-size .8em
  transition all .1s
  cursor pointer
  &:hover
    opacity 1

.tl-te-text
  resize none
  outline none
  border none
  border-bottom 2px solid lighten($gray, 50%)
  padding 10px
  width 100%
  margin 0 10px
  font normal 1em 'Hind'
  color #3d3d3d

.tl-te-toolbar
  flexbox(false, true)
  width 100%
  position relative
  padding 0 10px
  margin 9px 0
  justify-content space-between

.tl-te-tools-wrap
  flexbox(true, true)

.tl-te-tool
  color $gray
  margin 0 5px
  transition all .1s
  position relative
  &:first-of-type
    color darken($gray, 20%)
  &:hover
    opacity .8
    .tl-te-tool-hint
      opacity 1
      transform translateY(0)

.tl-te-date
  color darken($gray, 20%)
  font 500 .7em 'Cabin'
  transform translateY(15%)
  margin-right 10px

.tl-te-tool-hint
  color #fff
  background #000
  position absolute
  top -200%
  left 0
  padding 0 7px
  border-radius 3px
  font 500 .9em 'Hind'
  transform translateY(-5%)
  transition all .1s ease-in
  pointer-events none
  opacity 0

.tl-te-btn
  outline none
  border none
  padding 5px 13px
  border-radius 5px
  font 500 .9em 'Hind'
  text-transform uppercase
  color #fff
  background $red
  margin-left 10px
  transition all .1s
  &:hover
    background darken($red, 10%)

.tl-priority-0
  color #DAE163 !important
.tl-priority-1 
  color #639DE1 !important
.tl-priority-2
  color #FF4A25 !important

.tl-te-back
  color #aaa
  transition all .1s
  cursor pointer
  margin-right 15px
  &:hover
    color #3d3d3d

