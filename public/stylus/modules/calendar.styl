.calendar-wrap
  width 470px
  height 100%
  background #fff
  padding 0 17px 20px 17px
  position relative

/*******************************************
* YEAR SLIDER
*******************************************/
.year-slider
  flexbox(true, false)
  margin-top 50px
  position relative

.year-slider-left-control,
.year-slider-right-control
  flexbox(true, true)
  width 15%
  font-size .9em
  transition all .1s
  cursor pointer
  font-family 'Oxygen'

.year-slider-left-control .fa,
.year-slider-right-control .fa
  color #ddd

.year-slider-left-control:hover,
.year-slider-right-control:hover
  color #8d8d8d

.year-slider-left-control
  justify-content flex-start
.year-slider-right-control
  justify-content flex-end

.year-slider-tape-wrap
  width 60%
  overflow hidden
  font-family 'Oxygen'

.year-slider-tape
  position relative
  white-space nowrap
  font-family 'Oxygen'

.year
  display inline-block
  color #aaa
  transition all .2s
  font-size 1em
  text-align center
  width 32%
  font-family 'Oxygen'
.year:first-of-type
  margin-left 0
.year:last-of-type
  margin-right 0

.year-primary
  color darken($red, 20%)
  transform scale(1.4)
  font-family 'Oxygen'
  transition all .3

.year-denied
  color #ddd
  text-decoration line-through
  font-family 'Oxygen'

/*******************************************
* MONTH SLIDER
*******************************************/
.month-slider
  margin 30px 0 25px 0
  padding 0 8px
  position relative
  font-family 'Oxygen'

.month-numbers
  flexbox(false, false)

.month-numbers div 
  flex 1
  color #aaa
  text-align center
  cursor pointer
  font 300 15px 'Hind'

.month-current
  color $red !important 

.month-line 
  height 2px
  margin 12px 0 0 0
  background linear-gradient(to right, transparent 3%, #eee 3%, #eee 96%,  transparent 98%)
  flexbox(false, true)
  font-family 'Oxygen'

.slider-circle 
  height 13px
  width 13px
  background $red
  border-radius 50%
  position relative
  transition all .2s
  left 0


.month-title 
  color $red
  text-transform uppercase
  text-align center
  margin-top 25px
  font 300 17px 'Oxygen'


/*******************************************
* WEEKDAYS
*******************************************/
.weekdays-wrap
  flexbox(false, false)

.weekdays-wrap div 
  width calc(100% / 7)
  text-align center
  margin-bottom 10px
  color #7d7d7d
  font normal 15px 'Hind'

.calendar-cells-wrap 
  flexbox(false, false)
  margin-top 14px
  justify-content space-between

.cell 
  flexbox(true, true)
  width calc(100% / 7)
  text-align center
  padding 8px 0
  margin-bottom 5px
  color #5d5d5d
  border-radius 0
  cursor pointer
  position relative
  transition all .1s
  font 300 14px 'PT Sans'
  border-left 2px solid #fff
  border-right @border-left;

.cell:hover
  background #eee
.cell-out:hover
  color #3d3d3d !important
.cell-out
  color #aaa !important
.cell-today
  color #fff
  background $red

.cell-today:hover
  color #3d3d3d
.cell-active 
  background $red !important
  color #fff !important

.calendar-cell-number
  flexbox(true, true)
  position absolute
  top 0; right -1px
  height 20px
  width @height
  font 500 10px 'Hind'
  background lighten($red, 20%)
  border 1px solid #fff
  color #fff
  transform translate(0%, -20%)
  opacity 0
  z-index 2
  animation-name number
  animation-fill-mode forwards
  animation-timing-function linear
  animation-duration .2s
  animation-delay .3s

@keyframes number
  0% 
    opacity 0
    transform translate(0%, -20%) scale(0)
  15%
    opacity 1
  40%
    transform translate(0%, -20%) scale(1.2)
  70%
    transform translate(0%, -20%) scale(.95)
  100%
    opacity 1
    transform translate(0%, -20%) scale(1)
