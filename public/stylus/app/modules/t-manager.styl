.tasklist-global 
  width 550px
  max-height 450px
  padding 0 5px
  box-sizing content-box
  perspective 800px

/*********************************************
* TASKLIST SORTBAR
*********************************************/
.tl-task-sortbar
  flexbox(false, true)
  justify-content space-between
  width 60%
  margin 50px 0 10px 0
  padding 0 5px
  user-select none

.tl-sortbar-title
  display inline-block
  padding 5px 0 0 0
  font 500 1em 'Hind'
  color #6d6d6d
  position relative
  padding-left 25px

.tl-sortbar-select
  flexbox(true, true)
  color #6d6d6d
  transition all .1s
  position relative
  &:after
    content '\f0d7'
    color inherit
    font normal 12px 'fontawesome'
    position relative
    right 110%
    top 0; bottom 0
    margin auto
    transform translateY(10%)
    transition all .1s
  &.select-open:after
    content '\f0d8' !important

.select-open
  .tl-sortbar-list
    opacity 1
    transform translate(20%, 15%)

.select-close
  .tl-sortbar-list
    pointer-events none

.tl-sortbar-name
  font 500 .8em 'Cabin'
  color inherit
  margin-right 5px
  transform translateY(10%)
  &:hover
    cursor pointer
    color #3d3d3d

.tl-sortbar-icon
  color inherit

.tl-sortbar-list
  white-space nowrap
  top 150%
  right 0
  background #fff
  position absolute
  z-index 2
  transition all .1s
  opacity 0
  box-sizing content-box
  transform translate(20%, 0)
  padding 10px
  list-style none
  font normal 0.9em 'Cabin'
  line-height 20px
  box-shadow 0 0 3px 0 rgba(0, 0, 0, .2);
  border-radius 2px
  &:after
    content ''
    border-bottom 9px solid #fff
    border-top 9px solid transparent
    border-left @border-top
    border-right @border-top
    position absolute
    top 0
    transform translateY(-95%)
  .fa
    margin-right 5px
  li
    cursor pointer
    &:hover
      color #3d3d3d

/*********************************************
* TASKS
*********************************************/
.tl-task 
  flexbox(true , true)
  flex-direction column
  width 100%
  background #fff
  margin 10px 0
  position relative
  cursor pointer
  padding 5px 0
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  &-updating
    border 1px dashed $gray
    &:after
      display none !important
  &-content
    flexbox(false, true)
    position relative
    width 100%
    height 100%
  &-active
    background $red
    box-shadow 1px 1px 5px 1px rgba(0, 0, 0, .2)
    .tl-task-text,
    .tl-task-date
      color #fff !important
    &:hover
      background $red !important
  &-highlight
    background #ebebeb
    box-shadow 1px 1px 5px 1px rgba(0, 0, 0, .2)
  &:hover
    box-shadow 1px 1px 5px 1px rgba(0, 0, 0, .2)
  &-low:after,
  &-high:after,
  &-normal:after 
    content ''
    display block
    position absolute
    height 100%
    width 1%
    left 0
    top 0
  &-low:after
    background #DAE163
  &-normal:after
    background #639DE1
  &-high:after
    background #FF4A25
  &-text 
    font normal 14px 'Hind'
    color #3d3d3d
    height 100%
    display flex
    align-items flex-end
    padding 5px 20px
    max-width 80%
    pointer-events none
  &-date
    flexbox(true, true)
    height 100%
    position absolute
    right 10%
    top 0
    font 300 14px 'Hind'
    color #aaa
  &-folder 
    flexbox(false, true)
    justify-content flex-end
    padding 0 15px
    width 15%
    height 100%
    position absolute
    right 0
    top 0
    pointer-events none
  &-folder .fa 
    font-size 1.5em
    color #acacac

.toolbar 
  flexbox(false, false)
  flex-direction column
  justify-content space-between
  height 30%
  position absolute
  right 3%; top 0; bottom 0
  margin auto
  overflow hidden
  padding 20px 10px 20px 50px
  box-sizing content-box

.tb-tool 
  flexbox(true, true)
  height 50px
  width 50px
  background #EB6361 
  border-radius 50%
  transform translateX(0)
  position relative
  left 0
  cursor pointer
  &:nth-of-type(2)
    transition-delay 25ms
  &:last-of-type
    transition-delay 50ms
  &-hidden 
    display none 
  &-disabled
    opacity .4
    pointer-events none
    cursor default
  &:hover 
    background #DD3331
    box-shadow 2px 2px 10px 1px rgba(0, 0, 0, .4)
  &-disappear
    animation-name disappear
    animation-duration .3s
    animation-timing-function ease-in-out
    animation-fill-mode forwards
  .fa 
    color #fff
    font-size 1.2em

/*********************************************
* TASK EDITOR
*********************************************/

.tl-task-editor
  flexbox(false, true)
  width 100%
  background #fff
  position relative
  opacity 1

.tl-te-cancel
  color $red
  opacity .5
  position absolute
  top 0
  right 5px
  font-size .8em
  transition all .1s
  cursor pointer
  &:hover
    opacity 1

.tl-te-text
  resize none
  outline none
  border none
  border-bottom 2px solid lighten($gray, 50%)
  padding 10px
  width 100%
  margin 0 10px
  font normal 14px 'Hind'
  color #3d3d3d
  overflow auto

.tl-te-toolbar
  flexbox(false, true)
  width 100%
  position relative
  padding 7px 10px
  margin 9px 0
  justify-content space-between

.tl-te-tools-wrap
  flexbox(true, true)

.tl-te-tool
  color $gray
  margin 0 5px
  transition all .1s
  position relative
  &:first-of-type
    color darken($gray, 20%)
  &:hover
    opacity .8
    .tl-te-tool-hint
      opacity 1
      transform translateY(0)

.tl-te-date
  color darken($gray, 20%)
  font 500 .7em 'Cabin'
  transform translateY(15%)
  margin-right 10px

.tl-te-tool-hint
  hint()
  top -200%
  left 0
  transform translateY(-5%)

.tl-te-btn
  outline none
  border none
  padding 5px 13px
  border-radius 5px
  font 500 .9em 'Hind'
  text-transform uppercase
  color #fff
  background $red
  margin 0 10px
  transition all .1s
  position absolute
  top 0
  right 0
  &:hover
    background darken($red, 10%)

.tl-priority-0
  color #DAE163 !important
.tl-priority-1 
  color #639DE1 !important
.tl-priority-2
  color #FF4A25 !important

.tl-te-back
  color #aaa
  transition all .1s
  cursor pointer
  margin-right 15px
  &:hover
    color #3d3d3d


/*********************************************
* TASK CONTEXT MENU
*********************************************/
.tm-context-menu
  width 200px
  background #fff
  box-shadow 0px 0px 10px 2px rgba(0, 0, 0, .2);
  position absolute
  top 0
  right 0
  z-index 2
  opacity 1
  padding 5px
  border-radius 2px

.tm-context-toolset
  height 50px
  padding 0 5px
  margin 2px 0
  h2
    font normal 0.7em 'Cabin'
    color #aaa
  ul
    flexbox(false, true)
    justify-content space-around
    padding 10px 0 15px 0
  li
    list-style none
    position relative
    padding-bottom 2.5px
    margin-bottom 2.5px
    &:hover
      .tm-ctx-toolset-hint
        opacity .8
        transform translateY(0)
  i
    color #8d8d8d
    font-size 1.3em
    transition all .1s
    cursor pointer
    &:hover
      color $red

.tm-ctx-toolset-hint
  hint()
  top -150%
  transform translateY(-5%)

.tm-context-splitter
  height 1px
  background #eee
  margin 4px 0

.tm-context-button
  padding 5px 10px
  color #7d7d7d
  font 300 .9em 'Hind'
  cursor pointer
  outline none
  border none
  background transparent
  width 100%
  text-align left
  transition all .1s
  &:hover
    background #eee
  i
    font-size 1.1em
    margin-right 10px
    color #aaa

.priority-current
  border-bottom 2px solid #aaa

//GLOBAL ADD BUTTON
.add-button-global
  height 50px
  width 50px
  border-radius 50%
  outline none
  border none
  cursor pointer
  background $red
  transition all .3s
  position absolute
  right 20px
  bottom 20px
  border 1px solid darken($red, 10%)
  z-index 1
  &:hover
    background darken($red, 10%)
    transform translateY(-7%)
    box-shadow 0 3px 15px 1px rgba(0, 0, 0, .3)
  .fa
   color #fff

/*********************************************
* BUILDER
*********************************************/
.builder-wrap
  height 500px
  width 444px
  background #fff
  padding 20px
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  z-index 3
  box-shadow 0 0 20px 1px rgba(0,0,0,.3)
  border-radius 5px
  border 2px solid #5d5d5d
  overflow-y hidden

.builder-topbar
  flexbox(false, true)
  justify-content space-between
  width 100%
  z-index 1

.b-title-stripe
  position absolute
  top 10px
  left 0
  border-left 6px solid $red
  color darken($red, 10%)
  padding 8px 12px
  font 500 14px 'Hind'
  text-transform uppercase
  i
    font-size 20px

.b-form-wrap
  padding 0 20px
  background #fff
  box-shadow 0 0 16px rgba(0, 0, 0, .5);
  width 100%
  position absolute
  left 0
  bottom 0
  transition transform .2s

.b-form-wrap.b-form-collapsed
  transform translateY(100%)
  cursor pointer
  box-shadow none

.b-form-textfield
  padding 10px 5px
  overflow hidden
  max-height 80px
  min-height 44px
  border-bottom 1px solid $red
  outline none
  font normal 14px 'Hind'
  color #3d3d3d
  max-height 200px

.b-form-footer
  flexbox(false, true)
  width 100%
  justify-content space-between
  padding 20px 0

.form-unit
  position relative
  font 500 13px 'Hind'

.form-unit-top
  flexbox(false, true)
  padding-top 20px
  width 100%
  justify-content space-between

.unit-description
  color #3d3d3d
  text-decoration underline

.unit-counter
  color $red

.b-save-btn
  border none
  outline none
  font normal 14px 'Hind'
  text-transform uppercase
  color #fff
  border-radius 2px
  background $red
  bottom 20px
  right @bottom
  padding 5px 13px
  transition all .1s
  cursor pointer
  &:hover
    background darken($red, 15%)

.b-form-tip
  flexbox(true, true)
  position absolute
  background $red
  border-top-left-radius 2px
  border-top-right-radius 2px
  overflow hidden
  width 100%
  height 2px
  right 0
  transition all .2s .1s, height .2s 50ms
  i
    color $red
  &:hover
    background darken($red, 20%)

.b-form-collapsed .b-form-tip
  overflow visible
  width 40px
  height 40px
  right 20px
  transform translateY(-100%)
  transition all .2s .1s, height .2s .2s, background .2s
  animation b-tip forwards linear .2s
  i
    color #fff

@keyframes b-tip
  from
    transform translateY(-150%)
    opacity 0
  to
    transform translateY(-100%)
    opacity 1

.b-form-controls
  flexbox(true, false)
  max-width 250px
  position relative
  i
    color $red
    font-size 18px
    margin 0 5px
    position relative
    cursor pointer
    .hover-hint
      hint()
      top -200%
      left 0
      transform translateY(-5%)
      font normal 13px 'Hind'
    &:hover .hover-hint
      transform translateY(0)
      opacity .9

.b-textfield-wrap
  position relative

.b-form-dropdown
  width 100%
  position absolute
  background #eee
  top 0; left 0
  transform translateY(-100%)
  box-shadow 0 0 4px 0 rgba(0, 0, 0, .4);
  opacity 1
  overflow hidden
  li
    list-style none
    width 100%
    padding 10px
    background #fff
    margin 1px 0
    color #5c5d5d
    font normal 14px 'Hind'
    transition all .1s
    cursor pointer
    &.b-form-folder-focused
      background #eee
    &:last-of-type,
    &:first-of-type
      margin 0
    i
      font-size 18px
      margin-right 10px
    &:hover
      background #eee

.b-priority-list
  flexbox(true, true)
  flex-wrap nowrap
  background #fff
  padding 9px
  position absolute
  top 0; right 0
  transform translate(35%, -150%)
  box-shadow 0 0 3px 0 rgba(0, 0, 0, .5);
  border-radius 3px
  i
    margin 0 5px
    font-size 20px

.b-date-wrap
  position absolute
  z-index 1
  width 100px
  top 0; right 0

.folder-label
  background darken($red, 20%)
  display inline-block
  padding 0 5px
  color #fff
  font 500 14px 'Hind'
  border-radius 2px
  position relative
  padding-left 25px
  user-select none
  &:after
    content '\f07b'
    font: normal 14px 'fontawesome'
    position absolute
    left 5px
    top 50%
    transform translateY(-50%)

.form-priority
  @extends .folder-label
  &:after
    content '\f024'
    font: normal 14px 'fontawesome'
    position absolute
    left 5px
    top 50%
    transform translateY(-50%)

.form-priority-0
  background #DAE163 !important
  color #fff !important
.form-priority-1 
  background #639DE1 !important
  color #fff !important
.form-priority-2
  background #FF4A25 !important
  color #fff !important

/*********************************************
* Multiple selection
*********************************************/
.selection-hint
  padding 5px 10px
  font 500 13px 'Hind'
  color #fff
  background rgba(0, 0, 0, .7);
  border-radius 4px
  position absolute
  left 0
  pointer-events none
  display none





























